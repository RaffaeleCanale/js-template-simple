{
    "extends": [
        "airbnb-base",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "settings": {
        "import/resolver": "webpack"
    },
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "env": {
        "node": true
    },
    "globals": {
        "_": true
    },
    "rules": {
        "indent": ["error", 4],
        "padded-blocks": 0,
        "no-underscore-dangle": ["error", { "allowAfterThis": true }]
    }
}
